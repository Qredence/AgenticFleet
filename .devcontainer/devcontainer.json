{
  "name": "AgenticFleet Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "agenticfleet",
  "workspaceFolder": "/workspace",
  
  // Mount configurations
  "mounts": [
    "source=${localWorkspaceFolder}/.env,target=/workspace/.env,type=bind,consistency=cached",
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],

  // Features to install
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  // Environment variables
  "runArgs": [
    "--env-file", ".env"
  ],

  // Port forwarding
  "forwardPorts": [8001],
  "portsAttributes": {
    "8001": {
      "label": "AgenticFleet Web UI",
      "onAutoForward": "notify"
    }
  },

  // Post-create commands
  "postCreateCommand": "pip install -e '.[dev,test]' && playwright install --with-deps chromium",

  // VS Code specific settings
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.testing.pytestEnabled": true
      }
    }
  },

  // Remote environment variables
  "remoteEnv": {
    "AZURE_OPENAI_API_KEY": "${localEnv:AZURE_OPENAI_API_KEY}",
    "AZURE_OPENAI_ENDPOINT": "${localEnv:AZURE_OPENAI_ENDPOINT}",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}"
  }
}